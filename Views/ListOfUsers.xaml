<Window x:Class="WpfMessenger.Views.ListOfUsers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMessenger.Views"
        mc:Ignorable="d"
        Title="ListOfUsers" Height="285" Width="265" Background="#FF252424" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox x:Name="ListOfContacts" Grid.Column="0" Margin="10,43,10,10" 
            Style="{StaticResource List}"/>
        <TextBox x:Name="tbSearch" Margin="10,10,10, 0" BorderBrush="#FF2C2C2D" 
                 TextChanged="TbSearch_TextChanged"/>
    </Grid>
</Window>
